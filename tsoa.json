{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "securityDefinitions": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "outputDirectory": "build",
    "specVersion": 3
  },
  "routes": {
    "authenticationModule": "./src/middlewares/authentication.ts",
    "routesDir": "build"
  }
}